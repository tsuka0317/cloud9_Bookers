


<h1>Books</h1>


 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan='3'></th>
   </tr>
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book) %></td>
   <td><%= link_to "Edit", edit_book_path(book) %></td>
   <td><%= link_to "Destroy", book, method: :delete,data: { confirm: "Are you sure?" }  %></td>
  </tr> 
  <% end %>
  </tbody>
 
 </table>


<h2>New Book</h2>
<% if @book.errors.any? %>
 <div class="alert alert-warning">
<%= @book.errors.count %>件のerrorが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>

