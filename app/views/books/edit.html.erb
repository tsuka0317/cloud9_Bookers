<% if @book.errors.any? %>
 <div class="alert alert-warning">
<%= @book.errors.count %>件のerrorが発生しました
  
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>




<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to "Show", book_path(@book) %>
 | 
<%= link_to "Back", books_path %>
